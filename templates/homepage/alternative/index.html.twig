{% extends 'base-althome.html.twig' %}

{% block title %}All Available Vacancies{% endblock %}

{% block content %}
    
    <table id="table_id" class="althomepagetable">
        <thead>
            <tr>
                <th>Datum</th>
                <th>Functie</th>
                <th>Bedrijf</th>
                <th>Locatie</th>
                <th>Niveau</th>
                <th>Platform</th>
            </tr>
        </thead>
        <tbody>
        {% for vacancy in vacancies %}
            <tr>
                <td>{{ vacancy.vacancydate|date("d/m/Y") }}</td>
                <td>{{ vacancy.function }}</td> 
                <td>{{ vacancy.user.companyname}}</td>
                <td>{{ vacancy.location}}</td>
                <td>{{ vacancy.level }}</td>
                <td>{{ vacancy.platform.name}}</td>
            </tr>
        
      
        {% endfor %}
        </tbody>
    </table><br>

                
{% endblock %}
