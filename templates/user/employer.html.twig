{% extends 'base.html.twig' %}

{% block title %}{{ profile.companyname }}{% endblock %}

{% block logo %}
    <div class="grid-x">
        <div class="small-3 medium-3 large-3">
        </div>
        <div class="small-6 medium-6 large-6">
            <br><div>
                <img class="companyimg" src="{{ profile.profilepictureurl }}">
            </div>
        </div>
        <div class="small-3 medium-3 large-3">
        </div>
    </div>
{% endblock %}


{% block content %}
    <div class="grid-x">
        <div class="small-12 medium-12 large-12">
            <br><h2 style="font-family:bebas_neueregular; color: #F15A24">Profiel</h2>

            <label>Company Name</label> 
            <span class="display">{{ profile.companyname }}</span><br>

            <br><label>Contactperson</label> 
            <span class="display">{{ profile.firstname }} {{ profile.lastname }}</span><br>
                
            <br><label>Email</label> 
            <span class="display">{{ profile.email }}</span><br>
        </div>
    </div>  
    
    <div class="grid-x">
        <div class="small-5 medium-5 large-5"> 
            <br><label>Adres</label> 
                <span class="display">{{ profile.address }}</span>
        </div>

        <div class="small-1 medium-1 large-1">
        </div>

        <div class="small-6 medium-6 large-6"> 
            <br><label>Telefoonnummer</label>
            <span class="display">{{ profile.phonenumber }}</span>
        </div>
    </div>

    <div class="grid-x">
        <div class="small-5 medium-5 large-5"> 
            <br><label>Postcode</label> 
            <span class="display">{{ profile.zipcode }}</span>
        </div>

        <div class="small-1 medium-1 large-1">
        </div>

        <div class="small-6 medium-6 large-6"> 
            <br><label>Plaats</label>
            <span class="display">{{ profile.city }}</span>
        </div>
    </div>

    <div class="grid-x">
        <div class="small-12 medium-12 large-12"> 
            <br><h2 style="font-family:bebas_neueregular; color: #F15A24">Motivatie</h2>
            <span class="motivation">{{ profile.description }}</span><br><br><br>
        </div>
    </div>
{% endblock %}
