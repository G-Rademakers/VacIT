{% extends 'base.html.twig' %}

{% block title %}{{ vacancy.function }}{% endblock %}

{% block logo %}
    <div class="grid-x">
        <div class="small-3 medium-3 large-3">
        </div>
        <div class="small-6 medium-6 large-6">
            <br><div class="hexagon">
                <img src="{{ vacancy.platform.iconurl }}">
            </div>
        </div>
        <div class="small-3 medium-3 large-3">
        </div>
    </div>
    <div class="grid-x">
        <div class="small-3 medium-3 large-3">
        </div>
        <div class="small-6 medium-6 large-6">
           <br><a href="/userprofile/show/{{vacancy.user.id}}"><img class="sizedimg" src="{{ vacancy.user.profilepictureurl }}"></a>
        </div>
        <div class="small-3 medium-3 large-3">
        </div>
    </div>
{% endblock %}

            
{% block content %}
    <div class="grid-x">
        <div class="small-12 medium-12 large-12">
            <br><br><span class="datestyle">{{ vacancy.vacancydate|date("d/m/Y") }}</span>
            <span><h2>{{ vacancy.function }} voor {{ vacancy.user.companyname }}</h2></span>
        </div>
    </div>

    <div class="grid-x">
        <div class="small-10 medium-10 large-10">
            <div>
                <span class="leveltitle">Niveau: </span><span class='levelstyle'>{{ vacancy.level }}</span>
            </div>
        </div>
        <div class="small-2 medium-2 large-2">
            <div>
                <span class="locationstyle right"><i class="fas fa-map-marker-alt" style="font-size: 2rem; color: #F15A24; right"></i> {{ vacancy.location }}</span>
            </div>
        </div>
            
        <br>

        <div>
            <br><font size="2">{{ vacancy.jobdescription }}</font>
        </div>
    </div>
          
    <div class="grid-x">
        <div class="small-10 medium-10 large-10 left">
            {% if is_granted('ROLE_CANDIDATE') %}
                {% if application is not null %}
                    <br>
                    <br>
                    <button type="submit" id="_submit" name="_submit" class="btn btn-succes">
                        <a href="/application/remove/{{vacancy.id}}" class="orangetext-apply">
                        <i class="fas fa-arrow-right"></i>  Verwijder Sollicitatie </a>
                    </button>
                    

                {% else %}
                    <br>
                    <br>
                    <button type="submit" id="_submit" name="_submit" class="btn btn-succes">
                        <a href="/application/add/{{vacancy.id}}" class="orangetext-apply">
                        <i class="fas fa-arrow-right"></i>  Solliciteer Direct </a>
                    </button>
                {% endif %}

            {% else %}
                <br>
                <br>
                <button type="submit" id="_submit" name="_submit" class="btn btn-succes">
                    <a href="" class="orangetext-apply">
                    <i class="fas fa-arrow-right"></i>  Sollicitatie Aanpassen</a>
                </button>

            {% endif %}
        </div>
    </div>

        <div class="grid-x grid-padding-x">
            <div class="small-12 medium-12 large-12">
                {% if is_granted('ROLE_EMPLOYER') and app.user == vacancy.user %}
                    <div>
                        <br><span class='vacanciesstyle'>Meer sollicitanten op deze <span class="company">functie</span></span>
                    </div>
                    <div>
                       <br><table id="table_id" class="vacanciestable">
                            <thead>
                                <tr>
                                    <th>Sollicitatiedatum</th>
                                    <th>Sollicitant</th>
                                    <th>Email</th>
                                    <th>Uitgenodigd</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for applicant in applicants %}
                                    <tr>
                                        <td>{{ applicant.applicationdate|date("d-m-Y") }}</td>
                                        <td><a href="/userprofile/show/{{applicant.user.id}}" class="orangetext">{{ applicant.user.lastname}}, {{ applicant.user.firstname}}</a></td>
                                        <td>{{ applicant.user.email }}</td>
                                        <td class="centertable">{% if applicant.invited == true %}
                                            <i class="fas fa-check" style="font-size: 2rem"></i></td>
                                        {% endif %}
                                    </tr> 
                                {% endfor %}
                            </tbody>
                        </table><br><br>
                    </div>
                {% else %}
                    <div>
                        <br><span class='vacanciesstyle'>Meer Vacatures Van </span><a href="/userprofile/show/{{vacancy.user.id}}"><span class='company'>{{ vacancy.user.companyname }}</a></span>
                    </div>
                    <div>
                       <br><table id="table_id" class="vacanciestable">
                            <thead>
                                <tr>
                                    <th class="lefttable">Datum</th>
                                    <th>Vacature</th>
                                    <th>Niveau</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for vacancy in vacancies %}
                                    <tr>
                                        <td>{{ vacancy.vacancydate|date("d-m-Y") }}</td>
                                        <td><a href="/vacancy/show/{{vacancy.id}}" class="orangetext">{{ vacancy.function}}</a></td>
                                        <td>{{ vacancy.level}}</td>
                                    </tr> 
                                {% endfor %}
                            </tbody>
                        </table><br><br>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>   
{% endblock %}
