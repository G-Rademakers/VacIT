{% extends 'base.html.twig' %}

{% block title %}{{ vacancy.function }}{% endblock %}

{% block logo %}
    <div class="grid-x">
        <div class="small-3 medium-3 large-3">
        </div>
        <div class="small-6 medium-6 large-6">
            <br><div class="hexagon">
                <img src="{{ vacancy.platform.iconurl }}">
            </div>
        </div>
        <div class="small-3 medium-3 large-3">
        </div>
    </div>
    <div class="grid-x">
        <div class="small-3 medium-3 large-3">
        </div>
        <div class="small-6 medium-6 large-6">
           <br><img class="sizedimg" src="{{ vacancy.user.profilepictureurl }}">
        </div>
        <div class="small-3 medium-3 large-3">
        </div>
    </div>
{% endblock %}

            
{% block content %}
    <div class="grid-x">
        <div class="small-12 medium-12 large-12">
            <br><br><span class="datestyle">{{ vacancy.vacancydate|date("d/m/Y") }}</span>
            <span><h2>{{ vacancy.function }} voor {{ vacancy.user.companyname }}</h2></span>
        </div>
    </div>

    <div class="grid-x">
        <div class="small-10 medium-10 large-10">
            <div>
                <span class="leveltitle">Niveau: </span><span class='levelstyle'>{{ vacancy.level }}</span>
            </div>
        </div>
        <div class="small-2 medium-2 large-2">
            <div>
                <span class="locationstyle right"><i class="fas fa-map-marker-alt" style="font-size: 2rem; color: #F15A24; right"></i> {{ vacancy.location }}</span>
            </div>
        </div>
            
        <br>

        <div>
            <br><font size="2">{{ vacancy.jobdescription }}</font>
        </div>
    </div>
          

    <div class="grid-x">
        <div class="small-1 medium-1 large-1 ">
            <br><br><button type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" class="btn btn-succes; left" style="font-size: 3rem; color: #F15A24; "><i class="fas fa-arrow-right"></i></button>
        </div>
 
        <div class="small-9 medium-9 large-9 left">
            {% if is_granted('ROLE_CANDIDATE') %}
                <br><br><button type="submit" id="_submit" name="_submit" class="btn btn-succes; left" style="font-family: bebas_neueregular; font-size: 3rem; color: #F15A24">SOLLICITEER DIRECT</i></button>
                
            {% elseif is_granted('ROLE_EMPLOYER') and app.user == vacancy.user %}
                <br><br><button type="submit" id="_submit" name="_submit" class="btn btn-succes; left" style="font-family: bebas_neueregular; font-size: 3rem; color: #F15A24">Edit Vacancy</i></button>

            {% else %}
                    
            {% endif %}
        </div>
    </div>

        <div class="grid-x grid-padding-x">
            <div class="small-12 medium-12 large-12">
                <div>
                    <br><span class='vacanciesstyle'>Meer Vacatures Van </span><span class='company'>{{ vacancy.user.companyname }}</span>
                </div>
                <div>
                    <table id="table_id" class="vacanciestable">
                        <thead>
                            <tr>
                                <th class="lefttable">Datum</th>
                                <th>Vacature</th>
                                <th>Niveau</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for data in vacancies %}
                                <tr>
                                    <td class="lefttable">{{ data.vacancydate|date("d/m/Y") }}</td>
                                    <td>{{ data.function}}</td>
                                    <td>{{ data.level}}</td>
                                </tr> 
                            {% endfor %}
                        </tbody>
                    </table><br><br>
                 </div>
            </div>
        </div>
    </div>   
{% endblock %}
